{% extends "base.html.twig" %}

{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.5.1/min/dropzone.min.css" integrity="sha256-e47xOkXs1JXFbjjpoRr1/LhVcqSzRmGmPqsrUQeVs+g=" crossorigin="anonymous" />
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script src="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.5.1/min/dropzone.min.js" integrity="sha256-cs4thShDfjkqFGk5s2Lxj35sgSRr4MRcyccmi0WKqCM=" crossorigin="anonymous"></script>
{% endblock %}

{% block body %}
  {% block title_page %}
  <div class="block-title d-flex">
    {% if app.request.attributes.get('_route') == 'app_reservation_update' %}
      <img src="{{ asset('build/images/icon-edit-reservation.svg') }}" alt="icon add reservation" class="title-icon">
      <h1>Modification de la réservation n°{{ app.request.attributes.get('id') }}</h1>
    {% else %}
      <img src="{{ asset('build/images/icon-add-reservation.svg') }}" alt="icon add reservation" class="title-icon">
      <h1>Ajout un contrat</h1>
    {% endif %}
  </div>
  {% endblock %}
  <div class="block-content form-block">
    {{ form_start(form) }}
      {{ form_row(form.filename, {label: false}) }}
      {{ form_rest(form) }}
    {{ form_end(form) }}
  </div>
{% endblock %}