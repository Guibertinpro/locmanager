{% extends "base.html.twig" %}

{% block body %}
  {% block title_page %}
  <div class="block-title d-flex-jcb-aic">
    {{ parent() }}
    <div class="d-flex-jcb-aic col-10 col-md-12">
      {% if app.request.attributes.get('_route') == 'app_apartment_update' %}
        
        <h1 class="d-flex align-items-center">
          <img src="{{ asset('build/images/icon-edit-apartment.svg') }}" alt="icon add apartment" class="title-icon d-none d-md-block">
          <img src="{{ asset('build/images/icon-edit-apartment-w.svg') }}" alt="icon add apartment" class="title-icon d-md-none">
          Modification de l'appartement nÂ°{{ app.request.attributes.get('id') }}
        </h1>
      {% else %}
        
        <h1 class="d-flex align-items-center">
          <img src="{{ asset('build/images/icon-add-apartment.svg') }}" alt="icon add apartment" class="title-icon d-none d-md-block">
          <img src="{{ asset('build/images/icon-add-apartment-w.svg') }}" alt="icon add apartment" class="title-icon d-md-none">
          Ajout d'un appartement
        </h1>
      {% endif %}
    </div>
  </div>
  {% endblock %}
  <div class="block-content form-block">
    {{ form_start(form) }}
      <div class="d-flex justify-content-between align-items-center">
      {{ form_row(form.name) }}
      {{ form_row(form.color) }}
      </div>
      {{ form_row(form.address) }}
      {{ form_row(form.complementAddress) }}
      <div class="d-flex justify-content-between align-items-center">
      {{ form_row(form.postcode) }}
      {{ form_row(form.city) }}
      </div>
      {{ form_row(form.type) }}
      {{ form_row(form.localisationDescription) }}
      <div class="d-flex justify-content-between align-items-center">
      {{ form_row(form.capacity) }}
      {{ form_row(form.surface) }}
      </div>
      <div class="d-flex justify-content-between align-items-center">
      {{ form_row(form.numberOfRooms) }}
      {{ form_row(form.numberOfBeds) }}
      </div>
      {{ form_row(form.pets) }}
    {{ form_end(form) }}
  </div>
{% endblock %}