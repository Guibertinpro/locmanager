{% extends "base.html.twig" %}

{% block body %}
  {% block title_page %}
  <div class="block-title d-flex-jcb-aic">
    {{ parent() }}
    <div class="d-flex-jcb-aic col-10 col-md-12">
      <h1><i class="fa-solid fa-bed clr-black me-3"></i>Variables de configuration</h1>
    </div>
  </div>
  {% endblock %}
  <div class="block-content">
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">Num√©ro</th>
            <th scope="col">Nom</th>
            <th scope="col">Valeur</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          {% for configuration in configurations %}
            <tr>
              <td>{{ configuration.id }}</td>
              <td>{{ configuration.name }}</td>
              <td>{{ configuration.value }}</td>
              <td>
                <a href="{{ path('app_configuration_edit', {'id': configuration.id}) }}" class="btn btn-sm btn-outline-warning"><i class="fa-solid fa-pen-to-square"></i></a>
              </td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
{% endblock %}