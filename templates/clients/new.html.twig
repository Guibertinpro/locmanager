{% extends "base.html.twig" %}

{% block body %}
  {% block title_page %}
  <div class="block-title d-flex-jcb-aic">
    {{ parent() }}
    <div class="d-flex-jcb-aic col-10 col-md-12">
    {% if app.request.attributes.get('_route') == 'app_client_update' %}
      
      <h1 class="d-flex align-items-center">
        <img src="{{ asset('build/images/icon-edit-client.svg') }}" alt="icon add client" class="title-icon d-none d-md-block">
        <img src="{{ asset('build/images/icon-edit-client-w.svg') }}" alt="icon add client" class="title-icon d-md-none">
        Modification du client nÂ°{{ app.request.attributes.get('id') }}</h1>
    {% else %}
      
      <h1 class="d-flex align-items-center">
        <img src="{{ asset('build/images/icon-add-client.svg') }}" alt="icon add client" class="title-icon d-none d-md-block">
        <img src="{{ asset('build/images/icon-add-client-w.svg') }}" alt="icon add client" class="title-icon d-md-none">
        Ajout d'un client</h1>
    {% endif %}
    </div>
  </div>
  {% endblock %}
  <div class="block-content form-block">
    {{ form_start(form) }}
      <div class="d-flex justify-content-between align-items-center">
        {{ form_row(form.firstname) }}
        {{ form_row(form.lastname) }}
      </div>
      {{ form_row(form.email) }}
      {{ form_row(form.phone) }}
      {{ form_row(form.phoneBis) }}
      {{ form_row(form.address) }}
      {{ form_row(form.complementAddress) }}
      <div class="d-flex justify-content-between align-items-center">
        {{ form_row(form.postcode) }}
        {{ form_row(form.city) }}
      </div>
      {{ form_rest(form) }}
    {{ form_end(form) }}
  </div>
{% endblock %}